{
  "name": "anidb-client",
  "version": "0.1.0-alpha",
  "description": "Node.js bindings for the AniDB Client Core Library - high-performance anime file hashing and identification",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc",
    "clean": "node-gyp clean && rimraf dist",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.js\"",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "example:basic": "node examples/basic.js",
    "example:async": "node examples/async.js",
    "example:stream": "node examples/stream.js",
    "example:batch": "node examples/batch.js"
  },
  "keywords": [
    "anidb",
    "anime",
    "hash",
    "ed2k",
    "crc32",
    "md5",
    "sha1",
    "file-processing",
    "streaming",
    "n-api",
    "native-addon"
  ],
  "author": "Alysson Souza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/anidb-client.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/anidb-client/issues"
  },
  "homepage": "https://github.com/yourusername/anidb-client#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "dist",
    "src/native/*.{cc,h}",
    "binding.gyp",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "node-gyp": "^10.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/native/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}